{% extends 'base.html.twig' %}

{% block fullbody %}
    <body class="login-page">
    <form class="form-login" action="{{ path('login') }}" method="post">
        <h1 class="h2 mb-2 fw-bold">DREAM</h1>
        <h2 class="h5 mb-3 font-weight-normal">Create a new account</h2>

        <div class="alert alert-info">
            This form allows to register a new <strong>farmer account</strong>. For other types of accounts,
            please contact the local authorities.
        </div>

        {% if error %}
            <div class="alert alert-danger my-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <input type="email" class="form-control mb-3" id="email" name="_username" value="{{ last_username }}" placeholder="Email address" required autofocus/>
        <input type="password" class="form-control mb-3" id="password" name="_password" placeholder="Password"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
    </body>
{% endblock %}