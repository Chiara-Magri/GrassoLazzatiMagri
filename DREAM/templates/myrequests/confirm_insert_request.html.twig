{% extends 'base.html.twig' %}

{% block title %}Confirmation For Inserting New Help Request{% endblock %}

{% block subheader %}
    <div class="mb-3">
        <a class="btn btn-light btn-sm" href="{{ path('my_requests_index') }}">
            <i class="bi bi-arrow-left-short"></i> Back to My Requests
        </a>
    </div>
{% endblock %}

{% block content %}
    <div>
                <p>Title : {{ help_request.title }}</p>
                <p>Timestamp : {{ help_request.timestamp | date('Y-m-d H:i:s') }}</p>
                <p>Receiver : {{ help_request.receiver.fullname }}</p>
                <p>Text : {{ help_request.text }}</p>
            </div>
{% endblock %}